<%= if @user.avatar? then 
    image_tag @user.avatar, class: "bordered rightfloat"
    end %>
<dl class=attribute_list>
<dt>Name</dt>
<dd>  <%= @user.fullname %></dd>

<dt>Nickname</dt>
<dd>  <%= @user.nickname %></dd>

<dt>Email</dt>
<dd>  <%= @user.nickname %></dd>

<dt>Followers</dt>
<dd>  <%= link_to "#{@user.followers.count} users", followers_user_path(@user) %></dd>

<dt>Following</dt>
<dd>  <%= link_to "#{@user.following.count} users", following_user_path(@user) %></dd>

<% links=@user.links; if links.present? %>
<dt>Links</dt>
<dd>
<ul>
<% @user.links.each do |l| %>
<li><%= link_to l.title,l.url %>
<%= d=l.description and content_tag(:blockquote,d) %>
</li>
<% end %>
</ul>
</dd>
<% end %>
</dl>

<br clear=both>
<%= actions_bar(@user.actions) %>
</div>

