<%= render partial: 'users/profile_header', locals: {section: 'links'} %>
<div class=profile_body>
  <% @user.links.each do |l| %>
  <div class=row>
    <span class=link><%= link_to l.title,l.url %> </span>
    <span><%= link_to "[ edit ]", edit_user_link_path(@user,l) %></span>
    <span><%= link_to "[ delete ]", {action: :destroy, id: l.id},{method: :delete} %></span>
      <%= d=l.description and content_tag(:blockquote,d) %>
  </div>
  <% end %>
  <%= link_to "Add link", new_user_link_path(@user) %>
</div>
